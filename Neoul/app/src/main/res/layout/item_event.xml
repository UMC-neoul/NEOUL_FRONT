<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="18dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:src="@drawable/banner_main"
        android:scaleType="fitXY"
        android:id="@+id/img_banner"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/border_radius_8"
        android:backgroundTint="@color/warmGray98"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/img_banner"
        app:layout_constraintTop_toBottomOf="@id/img_banner"
        android:text="너울과 함께 해요!"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="@color/coolGray20"
        />

    <TextView
        android:id="@+id/text_subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/text_title"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        android:text="너울에서 세상을 함께 바꾸어 보아요"
        android:textSize="14sp"
        android:textColor="@color/coolGray60"
        android:paddingBottom="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>